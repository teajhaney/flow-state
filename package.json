{
  "name": "flow-state-copilot",
  "version": "1.0.0",
  "private": true,
  "description": "Flow State Co-Pilot: Multimodal monitoring tool",
  "main": "electron/dist/main.js",
  "workspaces": [
    "flow-state-backend",
    "flow-state-frontend"
  ],
  "scripts": {
    "dev:backend": "npm run start:dev -w flow-state-backend",
    "dev:frontend": "npm run dev -w flow-state-frontend",
    "dev:electron": "tsc -p electron/tsconfig.json && electron electron/dist/main.js",
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:electron\"",
    "build": "npm run build -w flow-state-backend && npm run build -w flow-state-frontend",
    "test": "npm run test -w flow-state-backend"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "typescript": "^5.0.0",
    "concurrently": "^8.0.0"
  },
  "author": ""
}
